// https://www.typescriptlang.org/tsconfig
{
  "compilerOptions": {
    // "jsx": "react-jsx",
    "noImplicitAny": true,
    "module": "commonjs", //"ES6",
    "target": "ES2022",
    "rootDirs": [
      "."
    ],

    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    // "noUnusedLocals": false,
    // "allowSyntheticDefaultImports": true,
    // "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "strict": true,
    // "noImplicitAny": true,
    // "strictPropertyInitialization": false,
    // "skipLibCheck": true,
    // "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@ADBoards/*": [
        "src/adboard/*",
      ],
      "@ADBoards-handlers/*": [
        "src/adboard/scripts/handlers/*",
      ],
      "@ENV": [
        "dotenv__.ts",
      ],
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules/**/*.js",
    "*.config.js",
    "**/dist",
    "*eslintrc.*",
    "*/**/*.json"
  ],
  
}
